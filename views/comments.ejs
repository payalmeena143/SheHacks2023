<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    <style>
      .header_section {
    height:700px;
    width: 100%;
    float: left;
    background-image: url("/images/comment.jpg");
    /* height: auto; */
    background-size: cover;
    height:100%;
    background-repeat: no-repeat; 
    font-weight:bold;
    font-family: 'Poppins';  
   }
       
   .ml10 {
    position: relative;
    font-weight: 800;
    font-size: 2.5em;
  }
  
  .ml10 .text-wrapper {
    position: relative;
    display: inline-block;
    /* padding-top: 0.2em; */
    padding-right: 0.05em;
    padding-bottom: 0.1em;
    overflow: hidden;
  }
  
  .ml10 .letter {
    display: inline-block;
    line-height: 1em;
    transform-origin: 0 0;
  }    
  img{
   border-radius: 15px 50px;
  }
    </style>
</head>

<body>
   <div class="header_section">
      <div class="container-fluid">
          <nav class="navbar navbar-expand-lg navbar-light ">
             <!-- <a class="navbar-brand"href="index.html"><img src="images/logo.png"></a> -->
             <!-- <h1 style="color:green;font-style: Poppins;">Eco-Review-Shop</h1> -->
             <h1 class="ml10">
              <span class="text-wrapper">
                <span class="letters" style="color:green;">Eco-Review-Shop</span>
              </span>
            </h1>
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
             </button>
             <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                   <li class="nav-item active">
                      <a class="nav-link" href="/" style="margin-right: 50px;">Home</a>
                   </li>
                   <li class="nav-item">
                      <a class="nav-link" href="/brands" style="margin-right: 50px;">Brands</a>
                   </li>
                   <li class="nav-item">
                     <a class="nav-link" href="/company" style="margin-right: 50px;">Post</a>
                  </li>
                  
                  
                 
                  <li class="nav-item">
                      <a class="nav-link" href="/#contact" style="margin-right: 50px;">Contact Us</a>
                  </li>
                 
                  
                </ul>
                
                
             </div>
          </nav>
       </div>
    <!-- <p style="background-image: url('images/green.jpg');"> -->
      <center>
      <div class="d-flex flex-column p-3">
         <i><p style="font-size:30px;color:rgb(10, 79, 10) ;"><%= brand.name %></p></i>
         <p><%= brand.description %></p>
         <p>The item type is: <%= brand.itemtype %></p>
         <p>The upvotes are: <%= brand.rating %></p>
       </div>
       
       <div class="menu-code pt-4 pl-4">
       <a href="<%= brand.url %>" target="_blank">
         <span class="mb-2">
           Visit
         </span>
       </a>
       
     </div>
     <br>
     <img src="<%= brand.status %>">
     </center>
     <br>
     <br>
     <i><p style="text-align:center;font-size:30px;color:rgb(10, 79, 10) ;">COMMENTS AND REVIEWS:</p></i>
      <div class="container d-flex justify-content-center">
         <div class="card mt-5 p-4">
     <% if (data != null) { data.forEach( item => { %>
       <div class="d-flex flex-row justify-content-between mb-3">
 
             <div class="d-flex flex-column p-3">
               <b><p><%= item.comment %></p></b>
               <p>By <%= item.user %></p>
             </div>
       </div>
       <hr style="height:5px;background-color: black;">
       <% }); } %>
 
     </div>
     </div>

        <br>
    <div class="container" style=" margin-top:0px; text-align: center;">
   <i><p style="text-align:center;font-size:30px;color:rgb(10, 79, 10) ;">ADD YOUR COMMENT:</p></i>
    <form action="/putcomment/<%= brand.name %>&<%= brand._id %>" method="POST">
      <p><input type="text" name="menuName" placeholder="Your Name" required></p>
      <p><input type="text" name="menuIcon" placeholder="Your review" style="height:100px;width:1000px;"required></p>
      <p>Would you suggest this brand to your peers?</p>
      <p><input type="text" name="rating" placeholder="YES/NO" required></p>
      <p> <button style="padding-left:20px;padding-right:20px;border:2px solid black;color:white;background-color: green;">Post Your Comment-></button></p>
  </form>
    </div>
</div>
<script>
   // Wrap every letter in a span
var textWrapper = document.querySelector('.ml10 .letters');
textWrapper.innerHTML = textWrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

anime.timeline({loop: true})
.add({
 targets: '.ml10 .letter',
 rotateY: [-90, 0],
 duration: 1300,
 delay: (el, i) => 45 * i
}).add({
 targets: '.ml10',
 opacity: 0,
 duration: 1000,
 easing: "easeOutExpo",
 delay: 1000
});
   </script>
</body>
</html>